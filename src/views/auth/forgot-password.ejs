<!DOCTYPE html>
<html lang="es">
  <%- include('../partials/head', { title: 'Olvidé mi contraseña' }) %>
  <body>
    <%- include('../partials/navbar') %>

    <main class="auth-wrap">
      <section class="auth-card">
        <header class="auth-head">
          <h1>Olvidé mi contraseña</h1>
        </header>

        <div class="auth-body">
          <% if (error) { %>
            <div class="auth-alert auth-alert--error"><%= error %></div>
          <% } %>

          <% if (message) { %>
            <div class="auth-alert auth-alert--success"><%= message %></div>
          <% } %>

          <form action="/auth/forgot-password" method="POST">
            <div class="form-row">
              <label class="label">Email</label>
              <input class="input" type="email" name="email" placeholder="tuemail@gmail.com" required />
            </div>

            <div class="auth-actions">
              <button class="btn btn-primary" type="submit">Enviar enlace</button>
            </div>
          </form>
        </div>

        <footer class="auth-footer">
          <a href="/auth/login">Volver al login</a>
        </footer>
      </section>
    </main>

    <%- include('../partials/footer') %>
  </body>
</html>


