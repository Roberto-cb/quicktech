<!DOCTYPE html>
<html lang="es">
  <%- include('../partials/head', { title: 'Restablecer contraseña' }) %>
  <body>
    <%- include('../partials/navbar') %>

    <main class="auth-wrap">
      <section class="auth-card">
        <header class="auth-head">
          <h1>Restablecer contraseña</h1>
        </header>

        <div class="auth-body">
          <% if (error) { %>
            <div class="auth-alert auth-alert--error"><%= error %></div>
          <% } %>

          <form action="/auth/reset-password" method="POST">
            <input type="hidden" name="token" value="<%= token %>" />

            <div class="form-row">
              <label class="label">Nueva contraseña</label>
              <input class="input" type="password" name="password" placeholder="Mínimo 8 caracteres" required />
            </div>

            <div class="form-row">
              <label class="label">Confirmar contraseña</label>
              <input class="input" type="password" name="confirmPassword" required />
            </div>

            <div class="auth-actions">
              <button class="btn btn-primary" type="submit">Cambiar contraseña</button>
            </div>
          </form>
        </div>

        <footer class="auth-footer">
          ¿Te acordaste? <a href="/auth/login">Iniciar sesión</a>
        </footer>
      </section>
    </main>

    <%- include('../partials/footer') %>
  </body>
</html>
