<!DOCTYPE html>
<html lang="es">
  <%- include('../partials/head') %>

  <body
    data-logged="<%= (typeof user !== 'undefined' && user) ? '1' : '0' %>"
    data-role="<%= (typeof user !== 'undefined' && user && user.role) ? user.role : '' %>"
  >
    <%- include('../partials/navbar') %>

    <main>
      <h1>Cat√°logo</h1>

      <% if (user && user.role === 'admin') { %>
        <div class="admin-toolbar">
          <button class="btn" id="admin-creat-product">+ Crear productos</button>
        </div>
      <% } %>

      <p id="catalog-error"></p>

      <div id="products-grid"></div>

      <!-- Modal admin -->
      <div id="admin-product-modal" hidden>
        <div class="modal-backdrop"></div>

        <div class="modal-content">
          <button class="btn btn-ghost" id="admin-modal-close" aria-label="cerrar">X</button>

          <h2 id="admin-modal-title">Producto</h2>

          <form id="admin-product-form">
            <div class="grid-two">
              <div>
                <label class="label">Marca</label>
                <input class="input" name="brand" required>
              </div>

              <div>
                <label class="label">Modelo</label>
                <input class="input" name="model" required>
              </div>

              <div>
                <label class="label">Categoria</label>
                <input class="input" name="category" required>
              </div>

              <div>
                <label class="label">Tipo</label>
                <input class="input" name="type" required>
              </div>

              <div>
                <label class="label">Stock</label>
                <input class="input" name="stock" type="number" min="0" step="1" required>
              </div>

              <div>
                <label class="label">Precio</label>
                <input class="input" name="price" type="number" min="0" step="0.01" required>
              </div>

              <div class="full">
                <label class="label">Imagen URL</label>
                <input class="input" name="image_url">
              </div>

              <div class="full">
                <label class="label">Caracteristicas</label>
                <textarea class="input" name="features" rows="3" required></textarea>
              </div>

              <div class="full">
                <label class="label">Dimensiones (JSON)</label>
                <textarea
                  class="input"
                  name="dimensions"
                  rows="3"
                  placeholder='{ "largo": 10, "ancho": 5, "grosor": 2 }'
                  required
                ></textarea>
              </div>
            </div>

            <input type="hidden" name="id" value="">

            <div class="cart-footer">
              <button type="button" class="btn btn-ghost" id="admin-modal-cancel">Cancelar</button>
              <button type="submit" class="btn" id="admin-modal-save">Guardar</button>
            </div>
          </form>

          <% if (user && user.role === 'admin') { %>
            <div class="admin-modal-divider"></div>

            <section class="admin-import admin-import--modal">
              <div class="admin-import__head">
                <strong>Importar productos desde Excel</strong>
                <span class="admin-import__hint">.xlsx / .xls</span>
              </div>

              <div class="admin-import__row">
                <input type="file" id="admin-excel-file" accept=".xlsx,.xls" />
                <button type="button" class="btn btn-ghost" id="admin-import-excel">
                  Importar Excel
                </button>
              </div>

              <small class="admin-import__help">
                Columnas: type, category, brand, model, dimensions, price, image_url, features, stock
              </small>
            </section>
          <% } %>
        </div>
      </div>
    </main>

    <!-- Modal carrito visitante -->
    <div id="guest-cart-modal" class="modal" hidden>
      <div class="modal-backdrop"></div>

      <div class="modal-content">
        <button class="modal-close" id="guest-cart-close" aria-label="Cerrar">x</button>

        <h2>Tu carrito</h2>

        <div id="guest-cart-items"></div>

        <div class="cart-footer">
          <div>Total: <strong id="guest-cart-total">$0</strong></div>
          <button id="guest-cart-clear" class="btn btn-ghost">vaciar</button>
          <button id="guest-cart-continue" class="btn">Continuar su compra</button>
        </div>
      </div>
    </div>

    <%- include('../partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/js/shop-cart.js"></script>
    <script src="/js/shop.js"></script>
  </body>
</html>
